}
.blankViewBig{
  height: 100rpx;
}
.addView{
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.addViewTitle{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.addImageAssetIcon{
  border-width: 0;
