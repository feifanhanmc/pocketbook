<view class="viewMain">
  <view class="viewCount">
  </view>
  <view class="viewContent">
    <navigator class="navigatorTrans"
    wx:for="{{transList}}"
    wx:key="id"
    url="/pages/transModify/transModify?transId={{item.id}}" >
      <view class="viewTransItemFirst">
        <text decode="{{true}}" space="{{true}}">&nbsp;&nbsp;</text>
        <image class="imageTranIcon" mode="widthFix" src="{{tranIconPath + item.ico_trans}}.png"></image>
        <text decode="{{true}}" space="{{true}}">&nbsp;&nbsp;</text>
        <view class="textTranName">
          <text class="textBlod">{{item.nam_asset}}</text>
          <text class="textGray">{{item.rmk_asset}}</text>
        </view>
      </view>
      <view class="viewTransItemSecond">
        <text class="textBlod" 
          style="{{item.tye_flow=='支出'?  'color:red;':  item.tye_flow=='收入'?  'color:green;':  'color:black;'}}">{{item.amt_trans}}</text>
        <text>{{rmk_asset}}</text>
      </view>
    </navigator>
  </view>
</view>

