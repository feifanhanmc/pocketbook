<!--pages/transAdd/transAdd.wxml-->
<block wx:if="{{lastTransAssetAcc}}">
  <view class="swiper-tab">
      <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">支出</view>
      <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">收入</view>
      <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">转账</view>
  </view>
  <view class="viewAsset">
    <view class="viewAsset1">
      <text decode="{{true}}" space="{{true}}">&nbsp;&nbsp;</text>
      <image class="imageAssetIcon" mode="widthFix" src="{{assetIconPath + lastTransAssetIco}}.png"></image>
      <text decode="{{true}}" space="{{true}}">&nbsp;&nbsp;</text>
      <view class="textTranName">
        <text class="textBlod">{{lastTransAssetNam}}</text>
        <text class="textGray">{{lastTransAssetRmk}}</text>
      </view>
    </view>
    <view class="viewAsset2">
      <input class="weui-input" bindinput="handleInputAmt" focus type="digit" maxlength="10" style="{{currentTab==0 ? 'color:red;' : currentTab==1 ? 'color:green;' : 'color:black;'}}" placeholder="{{amt_trans}}"/>
    </view>
  </view>



  <swiper current="{{currentTab}}" class="swiper-box" duration="300" style="{{currentTab==0 ? s1 : currentTab==1 ? s2 : s3}}" bindchange="bindChange">
      <swiper-item style="height: 700rpx">
          <view>产品</view>
          <view>产品</view>
          <view>产品</view>
          <view>产品</view>
          <view>产品</view>
          <view>产品</view>
          <view>产品</view>
          <view>产品</view>
          <view>产品</view>

          <view>产品</view>
          <view>产品</view>
          <view>产品</view>
          <view>产品</view><view>产品</view>
          <view>产品</view>
      </swiper-item>
      <swiper-item>
          <view>金融</view>
      </swiper-item>
      <swiper-item>
          <view>理财</view>
      </swiper-item>
  </swiper>

</block>
<block wx:else>请先创建账户</block>