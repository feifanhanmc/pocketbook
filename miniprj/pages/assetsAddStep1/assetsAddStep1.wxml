<!--pages/assetsAddStep1/assetsAddStep1.wxml-->
<view class="blankView"></view>
<view class="addView">
  <view class="addViewTitle">
    <text decode="{{true}}" space="{{true}}">&nbsp;&nbsp;</text>
    <image class="addImageAssetIcon" mode="widthFix" src="{{assetIconPath}}{{selectedAssetIco}}.png"></image>
    <text decode="{{true}}" space="{{true}}">&nbsp;&nbsp;</text>
    <text class="addTextAssetName">{{selectedAssetNam}}</text>
  </view>
</view>
<view class="blankView"></view>
<view class="blankView"></view>
<view class="page-body">
  <view class="page-section">
    <view class="weui-cells__title">资产名称</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" maxlength="20" focus placeholder="输入资产名称，默认为{{selectedAssetNam}}"/>
      </view>
    </view>
  </view>
  <view class="page-section">
    <view class="weui-cells__title">资产金额</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" type="digit" placeholder="输入资产金额，默认为0"/>
      </view>
    </view>
  </view>
</view>
<view class="blankViewBig"></view>
<view>
  <button class="saveButton">保存</button>
</view>